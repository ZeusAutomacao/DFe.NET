			<Version>6.0.0</Version>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <None Remove="CTe\CTeEvento.frx" />
	  <None Remove="CTe\CTeRetrato.frx" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="CTe\CTeEvento.frx">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="CTe\CTeRetrato.frx">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
